generator client {
  provider = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Athlete {
  id        String       @id @default(uuid())
  name      String
  age       Int
  team      String?
  metrics   Metric[]
}

model Metric {
  id          String       @id @default(uuid())
  athleteId  String
  athlete     Athlete    @relation(fields:[athleteId], references:[id])
  metricType  MetricType
  value       Float
  unit        Unit
  timestamp  DateTime
}

enum MetricType {
  SPEED
  STRENGTH
  STAMINA
}

enum Unit {
  KILOGRAMS
  MPS
  KILOMETERS
}